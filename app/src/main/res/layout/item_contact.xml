<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/small_margin"
    app:cardMaxElevation="@dimen/medium_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_contact"
            android:layout_width="@dimen/image_contact_size"
            android:layout_height="@dimen/image_contact_size"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:contentDescription="@string/image_contact_description"
            android:src="@drawable/ic_person_outline_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_contact_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_contact_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:gravity="center_vertical"
            android:text="@string/default_contact_name"
            android:textSize="@dimen/item_contact_name"
            app:layout_constraintBottom_toTopOf="@id/text_contact_phone"
            app:layout_constraintEnd_toStartOf="@id/button_favorite"
            app:layout_constraintStart_toEndOf="@id/image_contact"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_contact_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"
            android:text="@string/default_phone"
            android:textSize="@dimen/item_contact_phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_favorite"
            app:layout_constraintStart_toEndOf="@id/image_contact"
            app:layout_constraintTop_toBottomOf="@id/text_contact_name"/>

        <ToggleButton
            android:id="@+id/button_favorite"
            android:layout_width="@dimen/image_contact_function"
            android:layout_height="@dimen/image_contact_function"
            android:layout_marginEnd="@dimen/medium_margin"
            android:background="@drawable/ic_fav_24dp"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/image_call"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/image_call"
            android:layout_width="@dimen/image_contact_function"
            android:layout_height="@dimen/image_contact_function"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:contentDescription="@string/image_favorite_description"
            android:src="@drawable/ic_call_black_24dp"
            app:layout_constraintBottom_toTopOf="@id/image_sms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/image_sms"
            android:layout_width="@dimen/image_contact_function"
            android:layout_height="@dimen/image_contact_function"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:contentDescription="@string/image_favorite_description"
            android:src="@drawable/ic_message_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_call"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
